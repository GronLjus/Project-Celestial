$
{
	
	cam = import 'camera'
	lastX = 0
	lastY = 0

}

if ?3 : 0
{

	lastX = ?1
	lastY = ?2

}
else ?3 : 1
{

	diffY = lastY-?2
	rotByX = cast diffY
	rotByX = (diffY/768.0)*0.05
	rotate cam rotByX 0.0 0.0

	diffX = lastX-?1
	rotAroundY = cast diffX
	rotAroundY = (diffX/768.0)*0.005
	orbit cam rotAroundY

}