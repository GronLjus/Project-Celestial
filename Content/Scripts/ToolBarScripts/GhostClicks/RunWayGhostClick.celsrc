$
{

	hcktrck = 0
	hckX = 0.0
	hckY = 0.0
	hckZ = 0.0

}

post ?3

if ?3 : 0
{

	if hcktrck : 0
	{
	
		hook tracking
		hcktrck = 1
	
		hckX = ?f0
		hckY = ?f1
		hckZ = ?f2

	}
	else
	{

		obj = load copyobject ?0

		show cursor

		add obj

		clear tracking
		hcktrck = 0
	
		r1 = add routegoal hckX hckY hckZ 3
		r2 = add routegoal ?f0 ?f1 ?f2 3

	}
}